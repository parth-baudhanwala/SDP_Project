@model OnlineTermWorkSubmission.Models.Faculty

@{

    ViewBag.Title = "LoginFaculty";
}

<h3>LOGIN AS A FACULTY</h3>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("LoginFaculty", "Faculty", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <fieldset>


                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @if (@ViewBag.Message != null)
                    {
                        <div style="text-align:center">
                            @ViewBag.Message

                        </div>
                    }
                </fieldset>
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.faculty_email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.faculty_email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.faculty_email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.faculty_password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.faculty_password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.faculty_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-8">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
                <div>
                     @Html.ActionLink("Login As a Student", "StudentLogin", "Student")
                </div>
                <br>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}