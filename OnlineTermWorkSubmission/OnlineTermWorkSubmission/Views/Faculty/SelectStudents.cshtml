@model IEnumerable<OnlineTermWorkSubmission.Models.Subject>

@{
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SelectStudents</title>
</head>
<body>
    <div class="jumbotron">
        @Html.ActionLink("BACK TO STUDENTS LIST", "ViewStudent", new { id = ViewBag.id })
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.subject_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.semester)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.subject_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.semester)
                </td>
                <td>
                    <b>@Html.ActionLink("View Enrolled Students", "ViewEnrolledStudent", new { semNo = item.semester, sid = item.subject_id, id = ViewBag.id })</b>
                </td>
            </tr>
        }

    </table>
</body>
</html>
